@{
    ViewData["Title"] = "Update Product";
}
@model SimpleStore.Model.Product

<div class="text-center">
    <h1 class="display-4">Update product</h1>
    <form asp-action="Update" asp-controller="Product" method="post">
        <input type="hidden" asp-for="ProductId"/>
        <div>
            <label asp-for="ProductName"></label>
            <input asp-for="ProductName" />
            <span asp-validation-for="ProductName"></span>
        </div>
        <div>
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" />
            <span asp-validation-for="Quantity"></span>
        </div>

        <div>
            <label asp-for="Category"></label>
            <select asp-for="Category" asp-items="Html.GetEnumSelectList<SimpleStore.Model.Category>()">
                <option value="">Select Category</option>
            </select>
            <span asp-validation-for="Category"></span>
        </div>
        <button type="submit">Update Product</button>

    </form>
</div>