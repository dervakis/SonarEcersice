@{
    ViewData["Title"] = "Create new Product";
}
@model SimpleStore.Model.Product

<div class="text-center">
    <h1 class="display-4">Form for new Product</h1>
    <form asp-action="Create" asp-controller="Product" method="post">
        
        <div>
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName"/>
        <span asp-validation-for="ProductName"></span>
    </div>
    <div>
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" />
        <span asp-validation-for="Quantity"></span>
    </div>

    <div>
        <label asp-for="Category"></label>
        <select asp-for="Category" asp-items="Html.GetEnumSelectList<SimpleStore.Model.Category>()">
            <option value="">Select Category</option>
        </select>
        <span asp-validation-for="Category"></span>
    </div>
    <button type="submit">Add Product</button>

</form>
</div>